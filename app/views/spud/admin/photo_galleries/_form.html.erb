<%= form_for @photo_gallery, :url => path, :html => {:class => 'form-horizontal'} do |f| %> 
  
  <%=error_messages_for(f.object)%>
  
  <fieldset>
    <legend>Gallery Info</legend>  
      <div class="control-group">
        <%= f.label :title, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>
  </fieldset>
  
  <fieldset>
    <legend>Albums</legend>
    <div id="spud_admin_photo_gallery_album_selectors" class="spud_admin_photo_ui_thumbs">
      <% @photo_albums.each do |album| %>
        <div class="spud_admin_photo_ui_thumb spud_admin_photo_ui_thumb_selectable">
          <%= check_box_tag 'spud_photo_gallery[album_ids][]', album.id, (@photo_gallery.album_ids.include?(album.id)) %>
          <h4><%= album.title %></h4>
        </div>
      <% end %>
    </div>
  </fieldset>

  <div class="form-actions">
    <%= f.submit "Save Photo Gallery", :class=>"btn btn-primary form-btn", "data-loading-text" => "Saving..." %> 
    or <%=link_to "cancel", request.referer, :class => "btn" %>
  </div>

<% end %>